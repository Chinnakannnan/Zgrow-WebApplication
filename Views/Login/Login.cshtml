<body>
    <div class="top-header shadow">
        <div class="container">
            <div class="d-flex align-items-start justify-content-start">
               @* <a class="header-logo" href="index.html">
                    <img class="header-logo-img" src="~/img/logo.png" />
                </a>*@
            </div>
        </div>
    </div>
    <div class="login_container">
        <div class="login_banner">
            <div class="container">
                <div class="row justify-content-start">
                    <div class="col-xl-7 col-lg-7 col-md-12 text-light login_banner_content">
                                           
                    </div>
                </div>

            </div>
        </div>
    <div class="login_container" >     
    <div class="login_form container">
            @*<div class="row justify-content-end">*@
                <div class="row justify-content-center">
                <div class=" col-xl-5 col-lg-5 col-md-12">
                    <div class="card o-hidden border-0 shadow-lg login_card">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="pt-5 pr-5 pl-5 pb-2" id="login">
                                        <div class="text-center">
                                            <h4 class="text-gray-900 font-weight-bold">Account Login </h4>
                                            <p class="small">
                                                login with your email / Mobile number
                                            </p>
                                        </div>
                                        <form id="loginForm" class="login">
                                            <div class="form-group mb-3">
                                                <label class="floating-label">
                                                    <input type="text" class="form-control" id="txtUserName" name="UserName"
                                                           placeholder="Enter your user id/card number" autocomplete="off">
                                                    <span class="floating-text">User ID/Card Number</span>
                                                </label>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label class="floating-label show_hide_password">
                                                    <input type="password" class="form-control form-control-user" id="txtPassword" name="Password"
                                                           placeholder="Enter your password" autocomplete="off">
                                                    <span class="floating-text">
                                                        Password <span class="mandatory">*</span>
                                                    </span>
                                                    <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                                </label>
                                            </div>
                                            <img src="data:image/png;base64,@ViewBag.CaptchaImage" alt="CAPTCHA Image" style="width: 100px; height: 50px;" id="captchadefault"> <span><a href="#" onclick="refreshcaptcha()">Refresh</a></span>
                                          
                                            <br>
                                            <label for="captchaInput">Enter the CAPTCHA code:</label>
                                            <input type="text" id="captchaInput" name="captchaInput">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input"
                                                           id="customCheck"> 
                                                </div>
                                            </div>
                                                     <button  class="btn btn-primary btn-block bg-gradient-primary btn-large"
                                            onclick="submitLogin()">
                                            Login
                                            </button> 
                                        </form>                                      
                                        <hr>
                                      
                                    </div>
                                 </div>
                            </div>
                        </div>
                     </div>

                </div>
            </div>

        </div>

    </div>
