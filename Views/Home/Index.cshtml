            <div class="card shadow mb-4">
                <div class="card-body">
                    <!-- Base Style table start -->
                    <div class="col-12">
                        <h5 class="text-primary font-weight-bold">Transaction Details </h5>
                        <div class="row">
                            @* <div class="d-md-flex d-sm-block align-items-center justify-content-end flex-sm-row mt-3">*@
                            <div class="col-md-4">
                                <label class="floating-label">
                                    @*@Html.TextBoxFor(m => m.fromdate, DateTime.Now.ToString("yyyy-MM-dd"), new { @required = "", @autocomplete = "off",@class="form-control h-auto",  @id = "form_date", @type = "date", @maxlength = "50", placeholder = "From Date" })
                                    *@ <span class="floating-text">From Date</span>
                                </label>
                            </div>
                            @*<div class="px-2 d-md-block d-none">-</div>*@
                            <div class="col-md-4">
                                <label class="floating-label ">
                                    @*  @Html.TextBoxFor(m => m.todate, DateTime.Now.ToString("yyyy-MM-dd"), new { @required = "", @autocomplete = "off", @id = "to_date",@class="form-control h-auto", @type = "date", @maxlength = "50", placeholder = "To Date" })
                                    *@ <span class="floating-text">To Date</span>
                                </label>
                            </div>
                            <button type="submit" id="btnsubmit" class="btn btn-primary px-3 ml-md-3">Submit</button>
                            @* </div>*@
                        </div>
                    </div>
                </div>
            </div>


            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table pagination-lg table-bordered customerTransactions w-100" id="transactionStatement"
                               data-filter="false" data-page-length="10" data-length-change="false" data-info="false" cellspacing="0">
                            <thead>
                                <tr role="row">
                                    <th class="tablehead sorting sorting_asc" tabindex="0" aria-controls="transactionStatement" rowspan="1" colspan="1" aria-label="Transaction ID: activate to sort column descending" style="width: 320.208px;" aria-sort="ascending">Transaction ID</th>
                                    <th class="tablehead sorting" tabindex="0" aria-controls="transactionStatement" rowspan="1" colspan="1" aria-label="Transaction Date: activate to sort column ascending" style="width: 269.208px;">Transaction Date</th>
                                    <th class="tablehead sorting" tabindex="0" aria-controls="transactionStatement" rowspan="1" colspan="1" aria-label="Description: activate to sort column ascending" style="width: 196.208px;">Description</th>
                                    <th style="min-width: 90px; width: 90.2079px;" class="tablehead sorting" tabindex="0" aria-controls="transactionStatement" rowspan="1" colspan="1" aria-label="Credits: activate to sort column ascending">Credits</th>
                                    <th style="min-width: 90px; width: 90.2079px;" class="tablehead sorting" tabindex="0" aria-controls="transactionStatement" rowspan="1" colspan="1" aria-label="Debits: activate to sort column ascending">Debits</th>
                                    <th style="min-width: 90px; width: 90.2079px;" class="tablehead sorting" tabindex="0" aria-controls="transactionStatement" rowspan="1" colspan="1" aria-label="Balance: activate to sort column ascending">Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" style="text-align:center">No Record Found !!!</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>

</div>

<div class="modal fade" id="alertPopup" tabindex="-1" role="dialog"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="d-flex justify-content-center my-4">
                <i class="fas fa-check-circle text-danger" style="font-size:72px"></i>
            </div>
            <div id="displaydangermessage" class="modal-body text-center"></div>
            <div class="modal-footer align-self-center">
                <button class="btn btn-secondary btn-lg" type="button" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>